{
  "name": "ragepad",
  "version": "1.0.19",
  "description": "Soundpad integration with Angular frontend",
  "main": "dist/server/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/compulsive-quake/rage-pad/releases"
  },
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:server:watch": "tsc -p tsconfig.server.json --watch",
    "start:server": "node dist/server/index.js",
    "start:server:watch": "nodemon",
    "build:client": "cd client && npm run build",
    "build:client:watch": "cd client && npm run build-watch",
    "start:client": "cd client && npm run start",
    "start": "concurrently \"npm run build:server\" \"npm run start:server\"",
    "dev": "concurrently \"npm run build:server:watch\" \"npm run start:server:watch\" \"npm run start:client\"",
    "bundle:server": "node -e \"require('fs').mkdirSync('src-tauri/binaries', {recursive: true})\" && esbuild dist/server/index.js --bundle --platform=node --target=node20 --outfile=src-tauri/binaries/server-bundle.js",
    "download:node": "node -e \"require('fs').mkdirSync('src-tauri/binaries', {recursive: true})\" && curl -Lo src-tauri/binaries/ragepad-server-x86_64-pc-windows-msvc.exe https://nodejs.org/dist/v20.18.3/win-x64/node.exe",
    "sync:version": "node -e \"const fs=require('fs'),v=require('./package.json').version,p='src-tauri/tauri.conf.json',c=JSON.parse(fs.readFileSync(p,'utf8'));c.version=v;fs.writeFileSync(p,JSON.stringify(c,null,2)+'\\n')\"",
    "build:windows": "npm run sync:version && npm run build:server && npm run build:client && npm run bundle:server && npm run download:node && node -e \"require('fs').rmSync('src-tauri/target/release/bundle/nsis',{recursive:true,force:true})\" && tauri build && node -e \"const fs=require('fs'),g=require('path').join.bind(require('path'));fs.mkdirSync('builds',{recursive:true});fs.cpSync(g('src-tauri','target','release','bundle','nsis'),g('builds'),{recursive:true,force:true})\"",
    "release:windows": "powershell -ExecutionPolicy Bypass -File scripts/release.ps1"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@vreden/youtube_scraper": "^1.2.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "net": "^1.0.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.27.3",
    "nodemon": "^3.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
