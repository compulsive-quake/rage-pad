{
  "name": "rage-pad",
  "version": "1.0.0",
  "description": "Soundpad integration with Angular frontend",
  "main": "dist/server/index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:server:watch": "tsc -p tsconfig.server.json --watch",
    "start:server": "node dist/server/index.js --watch",
    "dev:server": "ts-node src/server/index.ts",
    "build:client": "cd client && npm run build-watch",
    "start": "npm run build:server && npm run start:server",
    "dev": "concurrently \"npm run dev:server\" \"cd client && npm start\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "private": true
}
