{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ragepad",
  "version": "1.0.4",
  "identifier": "com.ragepads.app",
  "build": {
    "frontendDist": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rage Pad",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "publisher": "Rage Pad",
    "externalBin": [
      "binaries/server"
    ],
    "resources": {
      "../client/dist/rage-pad-client/browser/*": "client-dist/",
      "binaries/server-bundle.js": "server-bundle.js",
      "../node_modules/better-sqlite3/build/Release/better_sqlite3.node": "better_sqlite3.node"
    },
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    }
  }
}
